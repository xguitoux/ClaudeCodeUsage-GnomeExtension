<?xml version="1.0" encoding="UTF-8" ?>
<schemalist>
  <schema
        id="org.gnome.shell.extensions.claudecode-usage"
        path="/org/gnome/shell/extensions/claudecode-usage/"
    >
    <key name="refresh-interval" type="i">
      <default>300</default>
      <summary>Refresh Interval</summary>
      <description>Intervalle de rafra√Æchissement en secondes</description>
    </key>
    <key name="show-logo" type="b">
      <default>false</default>
      <summary>Show Claude Logo</summary>
      <description
            >Afficher le logo Claude au lieu du label "Claude:"</description>
    </key>
    <key name="panel-position" type="i">
      <default>0</default>
      <summary>Panel Position</summary>
      <description
            >Position dans le panneau: 0=Gauche, 1=Centre, 2=Droite</description>
      <range min="0" max="2" />
    </key>
    <key name="panel-box-index" type="i">
      <default>-1</default>
      <summary>Panel Box Index</summary>
      <description>Index dans la zone du panneau (-1 pour la fin)</description>
    </key>
  </schema>
</schemalist>
